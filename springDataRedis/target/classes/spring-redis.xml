<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cache="http://www.springframework.org/schema/cache"
	xsi:schemaLocation="http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 注册Redis模板对象 -->
	<bean id="redisTemplate" class="org.springframework.data.redis.core.RedisTemplate">
		<!--key需要实现序列化-->
		<property name="keySerializer" ref="keySerializer"/>
		<!--value一般对应实体类，实体类需要实现序列化-->
		<property name="valueSerializer" ref="valueSerializer"/>
		<!--连接工厂-连接的是哪个redis代码客户端-->
		<property name="connectionFactory" ref="jedisConnectionFactory"/>
	</bean>
	
	<!-- 注册序列化器 -->
	<!--key一般为String类型-->
	<bean id="keySerializer" class="org.springframework.data.redis.serializer.StringRedisSerializer"/>
	<!--value为实体类，对应jdk序列化-->
	<bean id="valueSerializer" class="org.springframework.data.redis.serializer.JdkSerializationRedisSerializer"/>
	<!--连接的是jedis客户端-->
	<bean id="jedisConnectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
		<property name="hostName" value="192.168.1.107"/>
		<!--端口号默认为6379-->
		  <!-- <property name="port" value="6379"/> -->
		<!--有密码设置这个，无密码不需要设置-->
		  <!--<property name="password" value="111"/>-->
		<!--redis连接池默认-->
		<!-- <property name="poolConfig" ref="jedisPoolConfig"/> -->
	</bean>
	<!-- 注册jedisPoolConfig -->
	    <!-- <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig.JedisPoolConfig"/> -->
	
	<!-- 注册缓存注解驱动 -->
	<cache:annotation-driven cache-manager="cacheManager"/>
	
	<!-- 注册缓存管理器 -->
	<bean id="cacheManager" class="org.springframework.data.redis.cache.RedisCacheManager">
		<!-- 构造注入Redis操作对象，即Redis模板 -->
		<constructor-arg ref="redisTemplate"/>
		<!-- 设置缓存区域名称 -->
		<property name="cacheNames">
			<list>
				<value>realTimeCache</value>
				<value>unRealTimeCache</value>
			</list>
		</property>
		<!-- 为指定缓存区域设置生存时限，单位秒 -->
		<property name="expires">
			<map>
				<!-- 为unRealTimeCache缓存区域中的key设置的生存时限为50秒 -->
				<entry key="unRealTimeCache" value="50"/>
			</map>
		</property>
	</bean>
	
</beans>




























